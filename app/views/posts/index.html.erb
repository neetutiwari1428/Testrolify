<%= link_to "New post", new_post_path %>
<br>
<div style ="overflow-x: auto">
  <table>
  <thead>
  <tr>
    <th>Id</th>
    <th>Date</th>
    <th>Title</th>
    <th>Content</th>
    <th>Users</th>
    <th>Creators</th>
    <th>Editor</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
         <td><%= post.id %></td>
        <td><%= post.created_at.strftime("%d%H%Y") %></td>
        <td><%= post.title %></td>
        <td><%= simple_format(post.content) %></td>
        <td><%= post.users.distinct.pluck(:email) %></td>
        <td><%= post.creators.distinct.pluck(:email) %></td>
        <td><%= post.editor.distinct.pluck(:email) %></td>
        <td><%= link_to 'show' ,post%></td>
        <td><%= link_to 'edit' ,edit_post_path(post)%></td>
        <td><%= link_to 'destroy',post,method: :delete  %></td>
        
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
